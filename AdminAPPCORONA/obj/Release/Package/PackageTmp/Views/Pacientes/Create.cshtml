@model AdminAPPCORONA.Models.Paciente

@{
    ViewBag.Title = "Create";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Agregar</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Listar", "Index")
            </li>
            <li class="active">
                <strong>Agregar</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Agregar Paciente</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Correo, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Correo)
                                    @Html.ValidationMessageFor(model => model.Correo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Nombre)
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Apellido, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Apellido)
                                    @Html.ValidationMessageFor(model => model.Apellido)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SegundoApellido, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SegundoApellido)
                                    @Html.ValidationMessageFor(model => model.SegundoApellido)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Identidad, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Identidad, new { htmlAttributes = new { @class = "iden", @id = "iden" } })
                                    @Html.ValidationMessageFor(model => model.Identidad)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Edad, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Edad)
                                    @Html.ValidationMessageFor(model => model.Edad)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Genero, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Genero)
                                    @Html.ValidationMessageFor(model => model.Genero)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDNacionalidad, "IDNacionalidad", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDNacionalidad", String.Empty)
                                    @Html.ValidationMessageFor(model => model.IDNacionalidad)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Ciudad, "Ciudad", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Ciudad", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Ciudad)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Residencia, "Residencia", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Residencia", String.Empty)
                                    @Html.ValidationMessageFor(model => model.Residencia)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Agregar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                <script>
                    $("#Identidad").inputmask("9999-9999-99999");
                </script>

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
