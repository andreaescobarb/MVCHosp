@model AdminAPPCORONA.Models.Medico

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Listar", "Index")
            </li>
            <li class="active">
                <strong>Editar</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Medico</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IDMedico)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido)
                @Html.ValidationMessageFor(model => model.Apellido)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lunes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lunes, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Lunes)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Martes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Martes, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Martes)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Miercoles, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Miercoles, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Miercoles)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jueves, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Jueves, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Jueves)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Viernes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Viernes, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Viernes)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sabado, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Sabado, new { onkeydown = "return false" })
                @Html.ValidationMessageFor(model => model.Sabado)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Titulos, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulos)
                @Html.ValidationMessageFor(model => model.Titulos)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDEspecialidad, "IDEspecialidad", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDEspecialidad", String.Empty)
                @Html.ValidationMessageFor(model => model.IDEspecialidad)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}


                </div>
            </div>
        </div>
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
