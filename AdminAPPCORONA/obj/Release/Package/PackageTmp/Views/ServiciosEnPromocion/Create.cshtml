@model AdminAPPCORONA.Models.ServiciosEnPromocion

@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Listar", "Index")
            </li>
            <li class="active">
                <strong>Crear</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Servicio En Promoción</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PrecioFinal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrecioFinal, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.1", @value = "0" } })
                @Html.ValidationMessageFor(model => model.PrecioFinal)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDPromocion, "IDPromocion", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDPromocion", String.Empty)
                @Html.ValidationMessageFor(model => model.IDPromocion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDServicio, "IDServicio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDServicio", String.Empty)
                @Html.ValidationMessageFor(model => model.IDServicio)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
